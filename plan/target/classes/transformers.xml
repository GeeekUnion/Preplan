<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	业务基础平台总配置文件
 -->
<transformers>
    <!--组件融合的主目录 -->
    <cloudframework-modules-fuseFile>module</cloudframework-modules-fuseFile>
    <!-- 缺省的主题 -->
    <cloudframework-theme-default>blue</cloudframework-theme-default>
    <!-- 
    	组件融合模式：
    	jar：web资源文件不解压，一般用于开发环境；
    	dir：web资源文件解压，一般用于生成环境；
     -->
    <cloudframework-fuse-fuseMode>jar</cloudframework-fuse-fuseMode>
    <!-- 
    	组件运行模式：
    	run: 运行模式
    	dev: 开发模式
     -->
    <cloudframework-run-runMode>dev</cloudframework-run-runMode>
       
    <!-- 自定义权限配置开始 -->
    <!-- 自定义不需要过滤的url，多个地址间使用‘；’分隔 -->
    <constant name="cloudframework.authority.allowUrl" value = ""/>
    <!-- 自定义是否开启校验标识 ，默认为false-->
    <constant name="cloudframework.authority.validateFlags" value = ""/>
    <!-- 自定义前端登陆的url地址 -->
    <constant name="cloudframework.authority.front.loginUrl" value = ""/>
    <constant name="cloudframework.auth.front.loginUrl" value="/sys/login/login!login_noDecorator.do"/>
    <!-- 自定义权限配置结束-->
    
